# Talos Environment Variables Template
# Copy this file to .env and fill in your API keys
# IMPORTANT: Add .env to .gitignore!

# ========================================
# API KEYS (Primary - OpenRouter)
# ========================================

# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-YOUR-KEY-HERE

# ========================================
# OPTIONAL API KEYS
# ========================================

# Devin (Tier 5 - critical operations)
# Get from: https://devin.ai/api
# DEVIN_API_KEY=your-devin-key

# OpenAI (Fallback)
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-YOUR-OPENAI-KEY

# ========================================
# DATABASE
# ========================================

DB_PASSWORD=your-secure-postgres-password
DATABASE_DSN=postgres://user:password@localhost:5432/talos?sslmode=disable

# ========================================
# SECURITY
# ========================================

# JWT Secret Key (generate with: openssl rand -base64 32)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here

# ========================================
# SSO PROVIDERS
# ========================================

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Okta SSO
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret
OKTA_DOMAIN=your-okta-domain

# Azure AD
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# ========================================
# REDIS CACHE (Optional)
# ========================================

# REDIS_PASSWORD=your-redis-password

# ========================================
# VAULT (Production Only)
# ========================================

# VAULT_TOKEN=your-vault-token
# VAULT_ADDR=http://localhost:8200

# ========================================
# CLOUD PROVIDERS (Optional)
# ========================================

# AWS
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1

# Azure
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-secret
AZURE_TENANT_ID=your-azure-tenant

# GCP
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-credentials.json

# ========================================
# INTEGRATIONS (Optional)
# ========================================

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Jira
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=your-jira-token
JIRA_PROJECT=TALOS

# ClickUp
CLICKUP_API_TOKEN=your-clickup-token
CLICKUP_LIST_ID=your-list-id
